<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybratis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="com.minecraft.job.minecraftjob.domain.company.CompanyMapper">

    <insert id="create" parameterType="com.minecraft.job.minecraftjob.domain.company.CompanyVo" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO Company(email, password, name, description, logo, score, createAt)
        VALUES (
                #{email},
                #{password},
                #{name},
                #{description},
                #{logo},
                #{score},
                #{createAt}
                )
    </insert>

    <update id="update" parameterType="com.minecraft.job.minecraftjob.domain.company.CompanyVo">
        UPDATE Company
        SET email = #{email},
            password = #{password},
            name = #{name},
            description = #{description},
            logo = #{logo},
            score = #{score}
        WHERE id=#{id}
    </update>

    <select id="getCompanys" resultType="com.minecraft.job.minecraftjob.domain.company.CompanyVo">
        SELECT *
        FROM Company
    </select>

    <select id="getCompany" parameterType="int" resultType="com.minecraft.job.minecraftjob.domain.company.CompanyVo">
        SELECT *
        FROM Company
        Where id=#{companyId}
    </select>

</mapper>